<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage">

    <Grid VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="0" BackgroundColor="#EAEAEA">
            <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="FillAndExpand">
              
                <BoxView HeightRequest="0" VerticalOptions="FillAndExpand" />
                <Label x:Name="Output" TextColor="#121B3F" />

            </VerticalStackLayout>
        </ScrollView>

        <!-- Entry and Button at the bottom -->
        <Grid Grid.Row="1" BackgroundColor="#EAEAEA" Padding="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <Frame Padding="0" BorderColor="#F2CFE2" CornerRadius="5" HasShadow="False" Grid.Column="1">
                <Entry x:Name="InputBox" 
               TextColor="#121B3F" 
               Placeholder="¿Que quieres que haga?" 
               Completed="InputBox_Completed" 
               PlaceholderColor="#68667D" 
               BackgroundColor="#EAEAEA"
                />
            </Frame>

        </Grid>

    </Grid>
</ContentPage>
